<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="50sp"
    android:background="@drawable/spinnerborder">
    <TextView android:id="@+id/routenamecreation"
        android:layout_width="230sp"
        android:textSize="20sp"
        android:minHeight="50sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5sp"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>
    <TextView android:id="@+id/timecreation"
        android:layout_width="160sp"
        android:minHeight="50sp"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5sp"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>
    <TextView android:id="@+id/noofstopscreation"
        android:layout_width="120sp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|center_horizontal"
        />
    <LinearLayout
        android:layout_width="1.5sp"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>
    <TextView android:id="@+id/drivernamecreation"
        android:layout_width="220sp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5sp"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>
    <TextView android:id="@+id/busnocreation"
        android:layout_width="104.5sp"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5sp"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>
    <ImageView
        android:id="@+id/clickonimage"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:src="@drawable/editbottonofroutes"
        android:onClick="editbuttonclick"
        android:gravity="center_vertical|center_horizontal"/>
</LinearLayout>