<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/tablecolorblue">
            <TextView
                android:id="@+id/blueStudentnameremovetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:text="@string/stv_edit_payment"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/outerll">
            0
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/fueldatetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/stv_date2"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="200sp"
                        android:layout_height="50sp"
                        android:id="@+id/fueldateedit"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/spinnerborder"/>
                </LinearLayout>
            </LinearLayout>
            1
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/drivertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/stv_driver"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/spinnerborder">
                        <Spinner
                            android:id="@+id/selectdrivernamespinner"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:textSize="40sp"
                            android:spinnerMode="dialog"
                            android:gravity="center"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            2
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/amountgiventext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/stv_amount_given"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="200sp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/amountgivenedit"
                        android:background="@drawable/spinnerborder"/>
                </LinearLayout>

            </LinearLayout>
            3
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/amounttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/stv_amount_spent2"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <EditText
                        android:layout_width="200sp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/amountspentedit"
                        android:background="@drawable/spinnerborder"/>
                </LinearLayout>

            </LinearLayout>
            4
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:id="@+id/uploadinvoiceview_0"
                android:tag="uploadinvoiceview_0">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/invoicebustext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/stv_upload_invoice"
                        android:textSize="30sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_uploadinvoicepettycash_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_choose_file"
                        android:background="#2196f3"
                        android:tag="btn_uploadinvoicepettycash_0"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:onClick="uploadfirst"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50sp"
                        android:layout_marginLeft="10sp"
                        android:gravity="center_vertical"
                        android:tag="uploadinvoicepettycashtext_0"
                        android:id="@+id/uploadinvoicepettycashtext_0"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:text="@string/stv_no_file_chosen"/>
                    <!--<ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/multiply2"
                        android:background="@drawable/spinnerborder"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />-->
                </LinearLayout>
            </LinearLayout>
            5
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:id="@+id/addmorelayout">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_add_more"
                        android:background="#2196f3"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"
                        android:onClick="addMoreInvoice"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="right">
                    <Button
                        android:id="@+id/btn_update_popup_fuel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_update"
                        android:gravity="center"
                        android:background="#2196f3"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left">
                    <Button
                        android:id="@+id/btn_close_popup_fuel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_cancel"
                        android:background="#2196f3"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
