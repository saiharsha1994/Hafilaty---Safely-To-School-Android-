<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/tablecolorblue">
            <TextView
                android:id="@+id/blueStudentnameremovetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:text="@string/stv_edit_payment"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="300sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fueldatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_date2"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:id="@+id/fueldateedit"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="285sp">
                <TextView
                    android:id="@+id/drivertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_driver"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinnerborder">
                    <Spinner
                        android:id="@+id/selectdrivernamespinner"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="40sp"
                        android:spinnerMode="dialog"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="173sp">

                <TextView
                    android:id="@+id/amountgiventext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_amount_given"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />

                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/amountgivenedit"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="173sp">

                <TextView
                    android:id="@+id/amounttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_amount_spent2"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />

                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/amountspentedit"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="117sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="40sp"
                    android:id="@+id/invoicebustext"
                    android:textSize="30sp"
                    android:text="@string/stv_upload_invoice"
                    android:paddingRight="10dp"/>
                <Button
                    android:id="@+id/btn_uploadinvoicepettycash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_choose_file"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/uploadinvoicepettycashtext"
                    android:textSize="20sp"
                    android:text="@string/stv_no_file_chosen"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn_update_popup_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_update"

                        android:background="#2196f3"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:id="@+id/btn_close_popup_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_cancel"
                        android:layout_marginLeft="120sp"
                        android:background="#2196f3"
                        android:padding="8dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
