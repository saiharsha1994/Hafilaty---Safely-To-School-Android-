        <RelativeLayout
            android:id="@+id/relativelayoutfuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/header"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:background="@drawable/tablecolorblue">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="10sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:text="@string/stv_payment_list"
                        android:id="@+id/paymentlisttextbox" />
                </LinearLayout>
                <TableLayout
                    android:id="@+id/paymenttable"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    >
                    <TableRow
                        android:id="@+id/busrowid"
                        android:background="@drawable/borderwithlightblue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:text="@string/stv_date"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/fueldatetextbox" />
                        <LinearLayout
                            android:layout_width="1.5sp"
                            android:layout_height="match_parent" >

                            <View style="@style/Divider" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="1.5"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/stv_driver_name"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/drivernametextbox2" />
                        <LinearLayout
                            android:layout_width="1.5sp"
                            android:layout_height="match_parent" >

                            <View style="@style/Divider" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/stv_amount2"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/amounttextbox" />
                        <LinearLayout
                            android:layout_width="1.5sp"
                            android:layout_height="match_parent" >

                            <View style="@style/Divider" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/stv_amount_spent"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/amountspenttextbox" />
                        <LinearLayout
                            android:layout_width="1.5sp"
                            android:layout_height="match_parent" >

                            <View style="@style/Divider" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="0.6"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/stv_balance"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/balancetextbox" />
                        <LinearLayout
                            android:layout_width="1.5sp"
                            android:layout_height="match_parent" >

                            <View style="@style/Divider" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="50sp"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/stv_options"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/editpaymenttextbox" />
                    </TableRow>
                </TableLayout>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relativelayoutfuel"
            android:layout_marginBottom="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="0sp"
            android:paddingRight="0sp"
            android:id="@+id/listmanage">

            <ListView
                android:id="@+id/paymentcreatedlist"
                android:layout_marginTop="0sp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:divider="#000000">
            </ListView>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>