<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/colorlistchange"
    android:background="@drawable/spinnerborder">

    <TextView android:id="@+id/accidentdate"
        android:minHeight="50sp"
        android:layout_width="0sp"
        android:layout_weight="0.6"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/firstline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/accidentdrivername"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/secondline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/accidentdetails"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/thirdline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/accidentfine"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/fourthline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <!--<TextView android:id="@+id/driveroption"
        android:minHeight="50dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"/>-->
    <RelativeLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center_vertical|center_horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spinnerborder">
        <Spinner
            android:id="@+id/accidentoption"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textSize="25sp"
            android:gravity="center"
            />
    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>