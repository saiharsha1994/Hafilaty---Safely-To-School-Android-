            android:orientation="vertical" >

            <ListView
                android:id="@+id/routelist"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            </ListView>

        </LinearLayout>-->
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@android:color/darker_gray"/>-->

        <RelativeLayout
            android:id="@+id/relativelayoutoverspeedingcreeation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/toplinearlayout">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="2"
                android:background="@drawable/tableborder">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:orientation="horizontal"
                    android:background="@drawable/tablecolorblue">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="10sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:text="@string/stv_individual_selection"
                        android:id="@+id/individualselectiontextbox" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50sp">
                    <TableLayout
                        android:id="@+id/attendencetable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TableRow
                            android:id="@+id/attedencerowid"
                            android:background="@drawable/borderwithlightblue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="50sp"
                                android:text="@string/stv_date_over_speeding"
                                android:textColor="@android:color/white"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:id="@+id/dateoverspeedingtextbox"
                                />
                            <LinearLayout
                                android:layout_width="1.5sp"
                                android:layout_height="match_parent" >

                                <View style="@style/Divider" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="50sp"
                                android:text="@string/stv_bus_name_over_speeding"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:id="@+id/busnameoverspeedingtextbox" />
                            <LinearLayout
                                android:layout_width="1.5sp"
                                android:layout_height="match_parent" >

                                <View style="@style/Divider" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="50sp"
                                android:text="@string/stv_driver_name_over_speeding"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:id="@+id/drivernameoverspeedingtextbox" />
                            <LinearLayout
                                android:layout_width="1.5sp"
                                android:layout_height="match_parent" >

                                <View style="@style/Divider" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="50sp"
                                android:text="@string/stv_speed_achived_over_speeding"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:id="@+id/speedachivedoverspeedingtextbox" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativelayoutlistoverspeeding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relativelayoutoverspeedingcreeation"
            android:layout_marginBottom="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="0sp"
            android:paddingRight="0sp">
            <ListView
                android:id="@+id/routecreatedoverspeedinglist"
                android:layout_marginTop="0sp"
                android:layout_height="fill_parent"
                android:layout_width="match_parent"
                android:divider="#000000">
            </ListView>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>