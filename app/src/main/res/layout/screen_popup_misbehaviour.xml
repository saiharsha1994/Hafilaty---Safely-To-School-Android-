<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/tablecolorblue">
            <TextView
                android:id="@+id/blueStudentnameremovetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:text="@string/stv_add_record"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="185sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="@string/stv_select_date"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="35sp"
                    android:id="@+id/selectdateforadd"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="192sp">
                <TextView
                    android:id="@+id/selectbustext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="@string/stv_select_bus"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinnerborder">
                    <Spinner
                        android:id="@+id/selectbusspinnerforadd"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:textSize="25sp"
                        android:spinnerMode="dialog"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="152sp">
                <TextView
                    android:id="@+id/selectstudenttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="@string/stv_select_student"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinnerborder">
                    <Spinner
                        android:id="@+id/selectstudentspinnerforadd"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:textSize="25sp"
                        android:spinnerMode="dialog"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="230sp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/detailstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:text="@string/stv_details2"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/detailsforadd"
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:background="@drawable/spinnerborder"
                        android:gravity="top"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="textMultiLine"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btn_add_popup_misbehaviour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_add"
                    android:layout_marginLeft="290sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btn_close_popup_misbehaviour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_cancel"
                    android:layout_marginLeft="80sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy1"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy2"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
