<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/colorlistchange"
    android:background="@drawable/spinnerborder">

    <TextView android:id="@+id/customstudentlistname"
        android:minHeight="50sp"
        android:layout_width="0sp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/firstline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/customstudentlistclass"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/secondline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/customstudentlistsection"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/thirdline"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/customstudentlistmobileno"
        android:layout_width="0sp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"/>
</LinearLayout>