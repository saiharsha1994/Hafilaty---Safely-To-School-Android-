<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Student_Selection_Route_Admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outerlayout"
    android:foreground="@drawable/dimmer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:paddingLeft="5sp"
            android:paddingRight="3sp"
            android:layout_marginTop="62sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:orientation="horizontal"
                        android:background="@drawable/tablecolorblue">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="0sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:text="@string/stv_bus_list"
                            android:id="@+id/selectedstudent" />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/studentlist"
                        android:layout_marginTop="50sp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:scrollbars="none">
                    </ListView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="1.5sp"
            android:layout_height="match_parent"
            android:layout_marginTop="62sp"
            android:layout_marginRight="0sp"
            android:background="#2196f3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="62sp"
            android:background="@drawable/tableborderblue">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal"
                android:background="@drawable/tablecolorblue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="0sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="@string/stv_live_map"
                    android:id="@+id/selectstudentlayout"/>
            </LinearLayout>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.valuetechsa.admin_school_app.Hawkeye" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
