<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/tablecolorblue">
            <TextView
                android:id="@+id/blueStudentnameremovetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:text="@string/stv_manage_contract"
                android:gravity="center"
                android:paddingLeft="35dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="135sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/contractdatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_contract_date"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:textSize="20sp"
                    android:id="@+id/contractdateedit"
                    android:focusable="false"
                    android:singleLine="true"
                    android:inputType="none"
                    android:textIsSelectable="true"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="137sp">
                <TextView
                    android:id="@+id/vendornametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_vendor_name2"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:minWidth="200sp"
                    android:singleLine="true"
                    android:id="@+id/vendornameedit"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="142sp">
                <TextView
                    android:id="@+id/vendoremailtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_vendor_email2"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:minWidth="200sp"
                    android:singleLine="true"
                    android:id="@+id/vendoremailedit"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:id="@+id/vendormobiletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_vendor_mobile"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:inputType="number"
                    android:minWidth="200sp"
                    android:singleLine="true"
                    android:id="@+id/vendormobileedit"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="142sp">
                <TextView
                    android:id="@+id/bussesprovidedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_bus_provided"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:minWidth="200sp"
                    android:singleLine="true"
                    android:id="@+id/bussesprovidededit"
                    android:inputType="number"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="115sp">
                <TextView
                    android:id="@+id/driverprovidedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_driver_provided"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:minWidth="200sp"
                    android:singleLine="true"
                    android:id="@+id/driverprovidededit"
                    android:inputType="number"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="170sp">
                <TextView
                    android:id="@+id/expiredatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_expiry_date2"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:textSize="20sp"
                    android:id="@+id/expiredateedit"
                    android:focusable="false"
                    android:singleLine="true"
                    android:inputType="none"
                    android:textIsSelectable="true"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="90sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Additionaldetaistext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_additional_details"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="350sp"
                    android:layout_height="100sp"
                    android:hint="  Enter message here"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:id="@+id/additionaldetailsedit"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/afterthis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="70sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="40sp"
                    android:id="@+id/uploadcontracttext"
                    android:textSize="30sp"
                    android:text="@string/stv_upload_contract"/>
                <Button
                    android:id="@+id/btn_uploadcontract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_choose_file"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/uploadcontractfilenametext"
                    android:textSize="20sp"
                    android:text="@string/stv_no_file_chosen"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_add_popup_contracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_add_contract"
                    android:layout_marginLeft="250sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btn_close_popup_contracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_cancel"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy1"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy2"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy3"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="125sp">
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/dummy4"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
