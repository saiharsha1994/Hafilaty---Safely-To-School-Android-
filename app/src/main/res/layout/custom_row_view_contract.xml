<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/colorlistchangecontracts">

    <TextView android:id="@+id/vendornametext"
        android:layout_width="180sp"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:minHeight="55dp"
        android:gravity="center_vertical|center_horizontal"
        />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/firstlinecon"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/vendoremailtext"
        android:layout_width="280sp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/secondlinecon"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/vendorbusdrivertext"
        android:layout_width="190sp"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/thirdlinecon"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView android:id="@+id/vendorexpiredatetext"
        android:layout_width="150sp"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
        android:layout_width="1.5dp"
        android:layout_height="match_parent"
        android:id="@+id/fourthlinecon"
        android:background="@drawable/tablerowcolorblack"
        android:orientation="horizontal">
    </LinearLayout>
    <!--<TextView android:id="@+id/driveroption"
        android:minHeight="50dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">
    <RelativeLayout
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:background="@drawable/spinnerborder">
        <Spinner
            android:id="@+id/contractoption"
            android:layout_marginTop="5dp"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:textSize="25sp"
            android:gravity="center"
            />
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>