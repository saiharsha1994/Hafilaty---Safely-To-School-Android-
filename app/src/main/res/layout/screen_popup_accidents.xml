<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/tablecolorblue">
            <TextView
                android:id="@+id/blueStudentnameremovetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:text="@string/stv_manage_bus"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="272sp">
                <TextView
                    android:id="@+id/incidentdatetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_date"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/incidentdateedit"
                    android:focusable="false"
                    android:singleLine="true"
                    android:inputType="none"
                    android:textIsSelectable="true"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="225sp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/incidentdetaistext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_details"
                    android:gravity="center"
                    android:paddingRight="38dp"
                    />
                <EditText
                    android:layout_width="350sp"
                    android:layout_height="100sp"
                    android:hint="  Enter message here"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:id="@+id/incidentdetailsedit"
                    android:background="@drawable/spinnerborder"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="90sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="40sp"
                    android:id="@+id/uploadreporttext"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_upload_report"
                    android:paddingRight="10dp"/>
                <Button
                    android:id="@+id/btn_uploadreport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_choose_file"
                    android:background="#2196f3"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/uploadnamereporttext"
                    android:textSize="20sp"
                    android:text="@string/stv_no_file_chosen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="192sp">
                <TextView
                    android:id="@+id/selectbustext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_select_bus"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinnerborder">
                    <Spinner
                        android:id="@+id/selectbuslistspinner"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="40sp"
                        android:spinnerMode="dialog"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="165sp">
                <TextView
                    android:id="@+id/selectdrivertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_select_driver"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinnerborder">
                    <Spinner
                        android:id="@+id/selectdriverlistspinner"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textSize="40sp"
                        android:spinnerMode="dialog"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="163sp">
                <TextView
                    android:id="@+id/fineamounttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_fine_amount"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10dp"
                    android:inputType="number"
                    android:id="@+id/fineamountedit"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="248sp">
                <TextView
                    android:id="@+id/finestatustext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_fine_status"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    />
                <EditText
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/finestatusedit"
                    android:background="@drawable/spinnerborder"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="55sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="40sp"
                    android:id="@+id/uploaddocumenttext"
                    android:textSize="30sp"
                    android:text="@string/stv_incident_upload_documents"
                    android:paddingRight="10dp"/>
                <Button
                    android:id="@+id/btn_uploaddocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_choose_file"
                    android:background="#2196f3"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="300sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/uploadnamedocumenttext"
                    android:textSize="20sp"
                    android:text="@string/stv_no_file_chosen"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_add_popup_accident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stv_incident_submit"
                    android:layout_marginLeft="250sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/btn_close_popup_accident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sb_cancel"
                    android:layout_marginLeft="150sp"
                    android:layout_marginTop="20sp"
                    android:background="#2196f3"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
